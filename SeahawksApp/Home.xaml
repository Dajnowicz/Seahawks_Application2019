        <StackPanel HorizontalAlignment="Left" Height="388" Margin="367,0,0,0" VerticalAlignment="Top" Width="351" Background="Black">
            <Image Source="Files/HOME/HomePic.jpg" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,86,20,0" Width="279">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
